<UserControl x:Class="SharpApiTester.UcLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpApiTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Log In to Shrap Odds Maker" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />
        <TextBlock Text="You can Log in here, via service, if you didn't do it in Sharp Odds Maker Application."  Margin="10" HorizontalAlignment="Center" />
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Email:" Margin="5" />
            <TextBox x:Name="tbxEmail" Width="200"/>
            <TextBlock Text="Password:" Margin="5,10,5,5"/>
            <PasswordBox x:Name="tbxPassword" Width="200"/>
            <Button x:Name="btnLogin" Content="Log In" Width="60" Height="30" FontSize="17" Margin="0,10,0,0" Click="btnLogin_Click"/>
        </StackPanel>
    </StackPanel>
    
</UserControl>
